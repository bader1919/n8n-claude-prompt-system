# n8n Claude Prompt System Environment Variables
# Copy this file to .env and fill in your actual values

# Anthropic Claude API Key
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI API Key (optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Keys for authentication (comma-separated)
# In production, use proper key management system
API_KEYS=test-api-key,your-secure-api-key

# Security Settings
ENABLE_HTTPS=false
CORS_ORIGINS=http://localhost:5678,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_MODE=true
ENABLE_VERBOSE_LOGGING=false

# Template Settings
TEMPLATE_CACHE_TTL=3600000
MAX_TEMPLATE_SIZE=50000
MIN_TEMPLATE_QUALITY=60

# Provider Settings
DEFAULT_PROVIDER=claude
FALLBACK_PROVIDER=openai
MAX_RETRIES=3
REQUEST_TIMEOUT=30000

# Development Settings (set to false in production)
ENABLE_STACK_TRACES=true
ENABLE_MOCK_PROVIDERS=false
SANITIZE_ERRORS=true

# Optional: Database configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/n8n_prompts

# Optional: Redis configuration (for caching)
# REDIS_URL=redis://localhost:6379