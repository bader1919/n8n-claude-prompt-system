{
  "name": "Enhanced Template Discovery and Management",
  "description": "An advanced workflow for auto-discovery, validation, versioning, and error handling of templates with multi-LLM support.",
  "nodes": [
    {
      "parameters": {
        "operation": "scan",
        "target": "templates-directory"
      },
      "name": "Template Scanner",
      "type": "templateManager.scan",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "operation": "updateRegistry"
      },
      "name": "Registry Updater",
      "type": "templateManager.updateRegistry",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "validationMode": "multi-LLM"
      },
      "name": "Template Validator",
      "type": "templateManager.validate",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "operation": "manageVersioning"
      },
      "name": "Version Manager",
      "type": "versionManager.manage",
      "typeVersion": 1,
      "position": [850, 300]
    },
    {
      "parameters": {
        "onError": "handleError"
      },
      "name": "Error Handler",
      "type": "errorHandler.handle",
      "typeVersion": 1,
      "position": [1050, 300]
    }
  ],
  "connections": {
    "Template Scanner": {
      "main": [
        [
          {
            "node": "Registry Updater",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Registry Updater": {
      "main": [
        [
          {
            "node": "Template Validator",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Template Validator": {
      "main": [
        [
          {
            "node": "Version Manager",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Version Manager": {
      "main": [
        [
          {
            "node": "Error Handler",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
